name: Final CI/CD11 Pipeline

on:
  push:
    branches: [ "main" ]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v4
    
    - name: Set up JDK 17
      uses: actions/setup-java@v4
      with:
        java-version: '17'
        distribution: 'temurin'
        cache: maven
        
    - name: Navigate to project directory
      run: cd Week-01/Day-01
      
    - name: Build with Maven
      run: mvn compile
      working-directory: ./Week-01/Day-01  # Add this line
